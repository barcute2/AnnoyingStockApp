<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_stock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apackage.annoyingstockapp.EditStockActivity"
    android:alignmentMode="alignBounds"
    android:columnCount="3">

    <TextView
        android:text="Edit Stock"
        android:textSize="32dip"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:layout_height="69dp"
        android:layout_row="1"/>

    <TextView
        android:text="Stock Name"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp" />
    <TextView
        android:ems="5"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="center_horizontal"
        android:id="@+id/stock_name"
        android:layout_height="50dp" />

    <TextView
        android:text="Current Value"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:layout_row="3"
        android:id="@+id/textView3" />
    <TextView
        android:ems="5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/stock_current_value"
        android:layout_height="50dp"
        android:layout_row="3" />

    <TextView
        android:text="High Value"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:layout_row="4"
        android:id="@+id/textView2" />
    <EditText
        android:ems="5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:id="@+id/stock_high_value"
        android:layout_row="4" />

    <TextView
        android:text="Low Value"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:layout_row="5"
        android:id="@+id/textView" />
    <EditText
        android:ems="5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:id="@+id/stock_low_value"
        android:layout_row="5" />

    <Button
        android:id="@+id/save_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:onClick="saveNewStock"
        android:layout_row="7"
        android:layout_column="0" />

    <Button
        android:id="@+id/delete_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_delete"
        android:onClick="saveNewStock"
        android:layout_row="7"
        android:layout_column="1" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:onClick="cancel"
        android:layout_row="7"
        android:layout_column="2" />








</GridLayout>
