<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apackage.annoyingstockapp.SettingsActivity"
    android:alignmentMode="alignBounds"
    android:columnCount="2">

    <TextView
        android:text="Settings"
        android:textSize="32dip"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:layout_height="69dp"
        android:layout_row="0"/>

    <TextView
        android:text="Update frequency (mins): "
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"/>
    <EditText
        android:ems="5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/update_frequency"
        android:layout_row="3"/>

    <TextView
        android:text="Notifications: "
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <ToggleButton
        android:ems="5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:id="@+id/enable_notifications"/>

    <TextView
        android:text="Notification length (ms): "
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_row="2"/>
    <EditText
        android:ems="5"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:id="@+id/notification_length"
        android:layout_column="1"/>

    <Button
        android:id="@+id/save_settings"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_row="5"
        android:text="Save"
        android:onClick="saveSettings"/>
    <Button
        android:id="@+id/cancel_settings"
        android:layout_gravity="center_horizontal"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:onClick="cancelSettings"/>



</GridLayout>
